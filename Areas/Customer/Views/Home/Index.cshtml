@using EShop.Models
@model IEnumerable<EShop.Models.Products>
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script src="https://code.jquery.com/jquery-1.9.1.js"></script>
<script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script type="text/javascript">
    $(function () {

        $("#txtsearch").autocomplete({

            source: '@Url.Action("GetProducts")'
        });
    })
</script>

@using (@Html.BeginForm())
{
    <b> Search </b>
    @Html.TextBox("searchterm", null, new { id = "txtsearch" })
    <input type="submit" value="Search" />
}




<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal ">
                        <label style="font-size:23px; color:steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color:black"><b>Price:@product.Price</b></label>
                        </div>
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



