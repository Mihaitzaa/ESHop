@using EShop.Models
@model IEnumerable<EShop.Models.Products>
@{
    ViewData["Title"] = "Home page";
}
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        Search:
        <input type="text" name="searchString" />
        <input type="submit" value="Search" />
    </p>
</form>



<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal ">
                        <label style="font-size:23px; color:steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color:black"><b>Price:@product.Price</b></label>
                        </div>
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
